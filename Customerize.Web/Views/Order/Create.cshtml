<div class="container">
    <div class="bg-info">
        <h3 class="text-center">Ürün Listesi</h3>
    </div>
    <form id="CreateOrder" action="javascript:void(0);">
        <input asp-for="UserId" value="@Model.UserId" type="hidden" />
        <input asp-for="CompanyId" value="@Model.CompanyId" type="hidden" />
        <div>
            <table id="ProductList" class="table table-striped table-bordered table-hover">

                <thead>

                    <tr>
                        <th>Ürün Adı</th>
                        <th>Kategori Adı</th>
                        <th>Ürün Tipi</th>
                        <th>Fiyatı</th>
                        <th>Stok Adedi</th>
                        <th>Adet</th>
                        <th>Seçim</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Products)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.CategoryName</td>
                            <td>@item.ProductTypeName</td>
                            <td>@item.Price</td>
                            <td>@item.Stock</td>
                            <td>
                                <label class="pos-rel">
                                    <input id="piece" type="number" class="ace">
                                    <span class="lbl"></span>
                                </label>
                            </td>
                            <td>
                                <input id="productId" value="@item.Id" disabled>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                </tfoot>
            </table>
        </div>
        <div class="bg-black mt-2">
            <button type="submit" class="btn btn-success btn-block mt-2">Sipariş Oluştur</button>
        </div>
    </form>
</div>

@section scripts
    {

    <script>
        var table = $('#ProductList').DataTable({

        });
        $(document).ready(function () {

            $('#ProductList tbody').on('click', 'tr', function () {
                $(this).toggleClass('selected');
            });
        });

        $('#CreateOrder').on('submit', function (e) {
            e.preventDefault();
            var data = [];
            var selectedRow = table.rows('.selected').data();
            for (var i = 0; i < selectedRow.length; i++) {

                var productId = $(selectedRow[i][6]).val();

                var modelOrderLines = {
                    ProductId: productId
                    //ProductPiece: productPiece
                };
                data.push(modelOrderLines);
            }

            var model = {
                UserId: $('#UserId').val(),
                CompanyId: $('#CompanyId').val(),
                OrderLines: data
            }
            $.ajax({
                url: '@Url.Action("Create", "Order")',
                type: 'POST',
                data: JSON.stringify(model),
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    location.reload();
                }
            });
        });
    </script>

}






