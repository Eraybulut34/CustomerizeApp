@model OrderDtoDetails
<div class="col-sm-10 col-sm-offset-1">
    <div class="widget-box transparent">
        <div class="widget-header widget-header-large">
            <h3 class="widget-title grey lighter">
                <i class="ace-icon fa fa-shopping-cart bigger-160"></i>
                <b>Sipariş Durumu: </b> <span class="text-primary">@Model.Status</span>

            </h3>
            <div class="widget-toolbar no-border invoice-info">
                <span class="invoice-info-label">Numarası:</span>
                <span class="red">@Model.OrderCode</span>

                <br>
                <span class="invoice-info-label">Sipariş Tarihi:</span>
                <span class="blue">@Model.CreatedDate.ToString("dd-MM-yyyy")</span>

            </div>

            <div class="widget-toolbar hidden-480">
                <a asp-action="InvoicePrint" asp-controller="Order" asp-route-id="@Model.Id">
                    <i class="ace-icon fa fa-print"></i>
                </a>
            </div>
        </div>

        <div class="widget-body">
            <div class="widget-main padding-24">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="row">
                            <div class="col-xs-11 label label-lg label-info arrowed-in arrowed-right">
                                <b>Firma Bilgileri</b>
                            </div>
                        </div>

                        <div>
                            <ul class="list-unstyled spaced">
                                <li>
                                    <i class="ace-icon fa fa-caret-right blue"></i><b>Adı: </b> @Model.CompanyName
                                </li>

                                <li>
                                    <i class="ace-icon fa fa-caret-right blue"></i><b>Adresi: </b> @Model.Adress
                                </li>

                                <li>
                                    <i class="ace-icon fa fa-caret-right blue"></i><b>Bölgesi: </b> @Model.WorkArea
                                </li>

                                <li>
                                    <i class="ace-icon fa fa-caret-right blue"></i>
                                    <b>İletişim Numarası: </b>
                                    <b class="red"> @Model.CompanyPhoneNumber</b>
                                </li>

                                <li class="divider"></li>

                            </ul>
                        </div>
                    </div><!-- /.col -->

                    <div class="col-sm-6">
                        <div class="row">
                            <div class="col-xs-11 label label-lg label-success arrowed-in arrowed-right">
                                <b>Siparişi Veren Kişi</b>
                            </div>
                        </div>

                        <div>
                            <ul class="list-unstyled  spaced">
                                <li>
                                    <i class="ace-icon fa fa-caret-right green"></i><b>Adı: </b> @Model.FullName
                                </li>

                                <li>
                                    <i class="ace-icon fa fa-caret-right green"></i><b>Mail Adresi: </b> @Model.ContactMail
                                </li>
                                <li class="divider"></li>

                                <li>
                                    <i class="ace-icon fa fa-caret-right blue"></i>
                                    <b>İletişim Numarası: </b>
                                    <b class="red">@Model.ContactPhone</b>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="space"></div>

                <div>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Ürün Adı</th>
                                <th>Ürün Adeti</th>
                                <th>Toplam</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderLines)
                            {
                                <tr>
                                    <td class="center">@item.ProductName</td>
                                    <td class="center">@item.ProductPiece</td>
                                    <td class="center">@item.LineAmount</td>
                                </tr>
                            }
                        </tbody>

                    </table>

                </div>

                <div class="hr hr8 hr-double hr-dotted"></div>

                <div class="row">
                    <div class="col-sm-5 pull-right">
                        <h4 class="pull-right">
                            Toplam Tutar :
                            <span class="red">₺ @Model.Amount</span>
                        </h4>
                    </div>
                    <div class="col-sm-7 pull-left"> Müşteri Notları </div>
                </div>

                <div class="space-6"></div>
                <div class="well">
                    Thank you for choosing Ace Company products.
                    We believe you will be satisfied by our services.
                </div>
            </div>
        </div>
    </div>
</div>