@model IEnumerable<CategoryDtoWithProductList>
@{
    ViewData["Title"] = "GetCategoryListWithProduct";
}


<table class="table">
    <thead>
        <tr>
            <th scope="col">Adı</th>
            <th scope="col">Bu Kategorideki Ürünler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                @{
                    string products = "";
                    foreach (var product in item.Products)
                    {
                        products += product.Name + "—";
                    }
                    if (item.Products.Count() == 0)
                    {
                        products = "";
                    }
                    else
                    {
                        products = products.Remove(products.Length - 2, 2);
                    }
                }
                <td><b>@products</b></td>


            </tr>
        }
    </tbody>
</table>